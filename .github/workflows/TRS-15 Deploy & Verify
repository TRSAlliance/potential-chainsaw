# .github/workflows/trs15-deploy.yml
name: TRS-15 Deploy & Verify

on:
  push:
    branches: [main]
  workflow_dispatch:

jobs:
  deploy:
    runs-on: ubuntu-latest
    name: TRS Netlify + Firebase Deploy
    steps:
      - name: ğŸ“¥ Checkout repo
        uses: actions/checkout@v4

      - name: ğŸ§ª Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: '20'

      - name: ğŸ›  Install dependencies
        run: npm ci

      - name: ğŸ§ª Run Build
        run: npm run build

      - name: ğŸŒ Deploy to Netlify
        env:
          NETLIFY_AUTH_TOKEN: ${{ secrets.NETLIFY_AUTH_TOKEN }}
        run: |
          npm install -g netlify-cli
          netlify deploy --prod --dir=build --site=$NETLIFY_SITE_ID

      - name: ğŸ”¥ Deploy to Firebase
        env:
          FIREBASE_TOKEN: ${{ secrets.FIREBASE_TOKEN }}
        run: |
          npm install -g firebase-tools
          firebase deploy --only hosting,firestore
